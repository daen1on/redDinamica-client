{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "es2020",
      "es2019",
      "es2018",
      "es2015",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "exclude": ["cypress"],
  "angularCompilerOptions": {
    "strictTemplates": true,
    "preserveWhitespaces": true,
    // ...
  }
}
